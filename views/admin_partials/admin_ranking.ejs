<div id="Player">
    <select id="selest" onchange="myFunction()">
        <option value="" disabled selected>Valitse...</option>
        <% players?.forEach(function(c) { %>
            <option value='<%= c.id %>|<%= c.name %>|<%= c.group %>|<%= c.points %>''><%= c.name %></option>
        <% }) %>
    </select>
    <form action="/admin/ranking" method="post">
        <input type="hidden" name="id" id="id" />
        <label for="name">Name:  </label>
        <input type="text" name="name" id="name"/>
        <label for="group">Group: </label>
        <input type="number" name="group" id="group"/>
        <label for="points">Points:  </label>
        <input type="number" name="points" id="points"/>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

        <input type="submit" value="Submit"/>
    </form>
</div>

<script>
    function myFunction() {
        const words = document.getElementById("selest").value.split('|');
        document.getElementById("id").value = words[0].trim();
        document.getElementById("name").value = words[1].trim();
        document.getElementById("group").value = words[2].trim();
        document.getElementById("points").value = words[3].trim();
    }
</script>
