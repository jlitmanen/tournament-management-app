<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <div class="list-group" id="list-tab" role="tablist">
                <% content?.forEach(function(c, index) { %>
                    <button 
                        class="list-group-item list-group-item-action <%= index === 0 ? 'active' : '' %>" 
                        id="list-item-<%= index %>" 
                        data-bs-toggle="list" 
                        href="#content-<%= index %>" 
                        role="tab" 
                        aria-controls="content-<%= index %>">
                        <%= c.title %>
                    </button>
                <% }) %>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm" style="min-height: 30em;">
                <div class="card-body">
                    <div class="tab-content" id="nav-tabContent">
                        <% content?.forEach(function(c, index) { %>
                            <div 
                                class="tab-pane fade <%= index === 0 ? 'show active' : '' %>" 
                                id="content-<%= index %>" 
                                role="tabpanel" 
                                aria-labelledby="list-item-<%= index %>">
                                <h2 class="border-bottom pb-2"><%= c.title %></h2>
                                <span><%- c.text %></span>
                            </div>
                        <% }) %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
